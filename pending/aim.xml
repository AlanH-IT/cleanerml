<cleaner id="aim" os="windows">
  <label>AOL Instant Messenger</label>
  <description>Chat client</description>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.all" path="$APPDATA\Local\AOL\AIM\AppCache\*"/>
    <action command="delete" search="walk.file" path="$APPDATA\Local\AOL\AIM\cache\data*"/>
    <action command="delete" search="walk.file" path="$APPDATA\Local\AOL\AIM\cache\f_*"/>
  </option>
<option id="cookies">
  <label>Cookies</label>
  <description>Delete the cookies</description>
  <action command="delete" search="walk.file" path="$APPDATA\Local\AOL\AIM\cache\Cookies*"/>
</option>
</cleaner>
