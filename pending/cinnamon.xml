<cleaner id="cinnamon" os="linux">
  <label>Cinnamon</label>
  <option id="applet_cache">
    <label>Applet Cache</label>
    <description>Delete cache for downloaded applet images in Cinnamon applet installer.</description>
    <action command="delete" search="glob" path="~/.cinnamon/spices.cache/applet/*" />
  </option>
  <option id="desklet_cache">
    <label>Desklet Cache</label>
    <description>Delete cache for downloaded desklet images in Cinnamon desklet installer.</description>
    <action command="delete" search="glob" path="~/.cinnamon/spices.cache/desklet/*" />
  </option>
  <option id="theme_cache">
    <label>Theme Cache</label>
    <description>Delete the cache for downloaded theme images in Cinnamon theme installer.</description>
    <action command="delete" search="glob" path="~/.cinnamon/spices.cache/theme/*" />
  </option>
</cleaner>
