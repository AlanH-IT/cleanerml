<cleaner id="ansible" os="linux">
  <label>Ansible</label>
  <description>Configuration management, deployment, and task execution system</description>
  <option id="tempfiles">
    <label>Temporary files</label>
    <description>Delete temporary files</description>
    <action search="walk.files" command="delete" path="~/.ansible/tmp/" />
  </option>
</cleaner>
